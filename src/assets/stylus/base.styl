*
  box-sizing border-box

html
  margin  0
  width 100%
  overflow-x hidden

body
  margin  0
  font-family "Source Sans Pro", SimSun, Arial

.flex-row-center
  display flex
  justify-content center

.flex-column-center
  display flex
  flex-direction column
  justify-content center

.flex-row-space-between
  display flex
  justify-content space-between

.division
  width 100%
  height 1px
  border-bottom 1px solid #E6E6E6

ul
  list-style none
  margin 0px
  padding 0px

.cover
  position fixed
  height 100%
  width 100%
  background #F7F7F7
  z-index -1

.common-padding
  padding 10px 30px

.cursorp
  cursor pointer

.max-width-750
  max-width 750px

.common-line-height
  line-height 1.7rem



